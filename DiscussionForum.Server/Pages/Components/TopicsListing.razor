@foreach (TopicResult topic in Topics)
{
    <div class="my-4 rounded border-gray-400 border-[1px]">
        <div class="flex items-center justify-between rounded-t-[3px] bg-green-300 p-2 hover:bg-green-400 dark:bg-green-700 dark:hover:bg-green-600">
            <a href="/topic/@topic.Id" class="max-w-[calc(100%-3rem)] break-words font-bold hover:text-gray-700 sm:text-lg md:text-xl dark:hover:text-gray-300">@topic.Title</a>
            <p class="shrink-0 mx-2 flex">
                <img src="icons/comments.svg" alt="Messages" class="inline invert-[.25] dark:invert" width="18" height="18" />
                <span class="mx-1">@topic.MessageCount</span>
            </p>
        </div>
        <div class="flex-wrap items-center justify-between p-2 text-sm sm:flex">
            <b class="font-bold">#@topic.UserName</b>
            <p><b>Created:</b> @topic.Created.LocalDateTime.ToString("dd/MM/yyyy HH:mm")</p>
            <p><b>Last Message:</b> @topic.LastMessageTimeStamp.LocalDateTime.ToString("dd/MM/yyyy HH:mm")</p>
        </div>
    </div>
}

@code {
    [Parameter][EditorRequired] public required List<TopicResult> Topics { get; init; }
}