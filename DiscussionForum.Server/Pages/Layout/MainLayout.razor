@inherits LayoutComponentBase
@inject NavigationManager navigation

<nav class="bg-green-400 dark:bg-green-700">
    <div class="center-container flex min-h-[3rem] items-center justify-between">
        <a href="/" class="ml-4 block text-2xl font-bold sm:text-3xl">Discussion Forum</a>
        <AuthorizeView>
            <Authorized>
                <ProfileButton />
            </Authorized>
            <NotAuthorized>
                <a class="mx-6" href="/.auth/login/aad?post_login_redirect_uri=@navigation.Uri.Replace("http:", "https:")" data-enhance-nav="false">Log in</a>
            </NotAuthorized>
        </AuthorizeView>
    </div>
</nav>

<main>
    @Body
</main>

<div id="blazor-error-ui" class="bg-green-400 dark:bg-gray-900">
    An error has occurred.
    <button type="button" href="" class="btn btn-secondary mx-1">Reload</button>
    <button type="button" class="dismiss">🗙</button>
</div>
