<dialog @ref=modal class="p-0 m-auto w-[min(90%,400px)] rounded-md shadow-md starting:-translate-y-2 starting:opacity-0 border-gray-800 border-2">
    <div class="flex justify-between items-center px-4 py-2 bg-[#4c984c] text-white">
        <h2 class="text-xl font-bold">@Header</h2>
        <form method="dialog">
            <button type="submit" class="text-2xl mb-1 font-bold w-8 h-8 hover:text-black focus:text-black" @onclick=CloseModal autofocus aria-label="close">&times;</button>
        </form>
    </div>
    <div>
        @ChildContent
    </div>
</dialog>